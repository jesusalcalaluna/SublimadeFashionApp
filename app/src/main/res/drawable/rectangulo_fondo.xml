<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:width="340dp" android:height="245dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffffffff" />
            <corners android:radius="17dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#96000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
        </shape>
    </item>
</selector>
